<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Top section: Profile image and profile info-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relLayout1"
            >

            <!--Profile image-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:id="@+id/relLayout8" >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/profileImg"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/eggs"/>

            </RelativeLayout>

            <!--Post and followers info-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/relLayout8"
                android:id="@+id/relLayout7">
                <include layout="@layout/snippet_profile_top" />
            </RelativeLayout>


            <!--Profile name and bio-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linLayout2"
                android:layout_below="@id/relLayout7"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/profileName"
                        android:text="The Legend"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileBio"
                    android:text="I am the best cook in the world. My recipes will blow your mind."
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"/>

                <android.support.v7.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileSearch"
                    android:queryHint="Search for recipes"
                    android:background="@drawable/button_grey_background">

                </android.support.v7.widget.SearchView>

            </LinearLayout>

            <!--Recipe List-->
            <!--TO-DO: FIX RECIPE LIST TO SCROLL-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rellayout2"
                android:layout_below="@id/linLayout2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true">

                    <include layout="@layout/layout_profile_recipebutton" />

                    <include layout="@layout/layout_profile_recipebutton"/>

                    <include layout="@layout/layout_profile_recipebutton" />

                    <include layout="@layout/layout_profile_recipebutton" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</merge>